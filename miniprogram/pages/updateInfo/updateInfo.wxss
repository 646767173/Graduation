.info{
	background-color: #fff;
}

.item{
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 40rpx 20rpx;
	border-bottom: 2rpx solid #d3d3d3;
	width: 85%;
	margin: 0 auto;
}

.item .right{
	display: flex;
	align-items: center;
}

.item .right image{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
}

.item .right text{
	color: #a1a1a1;
	margin-left: 15rpx;
}

.item .right input{
	text-align: right;
	color: #a1a1a1;
	-webkit-text-fill-color: #a1a1a1; /* placeholder颜色 */
}

.address{
	background-color: #fff;
	margin-top: 25rpx;
}

.address .element{
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 30rpx 40rpx;
}

.address .element .left{
	display: flex;
	align-items: center;
}

.address .element .left image{
	width: 40rpx;
	height: 40rpx;
}

.address .element .left text{
	margin-left: 20rpx;
}

.address .element .right text{
	color: #a1a1a1;
}

.btn button{
	width: 90% !important;
	background-color: #1296db;
	color: #fff;
	padding: 20rpx 0;
	border-radius: 40rpx;
	margin-top: 80rpx;
	font-weight: 400;
}