<view class="body">
	<view class="avatar">
		<image src="{{userInfo.avatarUrl}}"></image>
	</view>
	<view class="tips" bindtap="showTips">
		申请接单常见问题说明
	</view>
	<my-modal wx:if="{{showTips}}" title="title" content="{{content}}" bindclose="showTips"></my-modal>
	<view class="item">
		<text>姓名：</text>
		<input type="text" placeholder="你的姓名"/>
	</view>
	<view class="item">
		<text>证件号：</text>
		<input type="text" placeholder="你的证件号"/>
	</view>
	<view class="upload">
		<text>相关证件证明：</text>
		<view class="load" bindtap="uploadImg">
			<text wx:if="{{!applyImg}}">+</text>
			<image wx:else src="{{applyImg}}"></image>
		</view>
	</view>
	<view class="item" bindtap="toAgreement">
		<view class="left">
			<image src="../../images/xieYi.png"></image>
			<text>电子协议</text>
		</view>
		<view class="right">〉</view>
	</view>
	<my-button text="提交申请"></my-button>
</view>