<view class="container">
	<view class="title">送件大小</view>
	<view class="type line">
		<view class="{{typeNow === index ? 'selectType' : ''}}" wx:for="{{typeList}}" wx:key="index" data-id="{{index}}" data-mes="{{item.mes}}" bindtap="selectType">{{item.name}}</view>
	</view>
	<view class="item line">
		<text>取件地址：</text>
		<text bindtap="selectAddress">请选择地址 〉</text>
	</view>
	<view class="item">
		<text>送件地址：</text>
	</view>
	<view class="detail">
		<textarea class="content" cols="20" rows="6" placeholder="请输入送件详情地址">
		</textarea>
	</view>
	<view class="item line">
		<text>备注信息：</text>
		<input type="text" placeholder="此消息所有人可见"></input>
	</view>
	<view class="item line">
		<text>更多要求：</text>
		<text style="color: #1296db" bindtap="showMore" wx:if="{{showMore}}">隐藏 〉</text>
		<text style="color: #1296db" bindtap="showMore" wx:else>显示 〉</text>
	</view>
	<view class="show" wx:if="{{showMore}}">
		<view class="item line dialogWidth">
			<text>期望送达：</text>
			<!-- <text>不限时间 〉</text> -->
			<picker bindchange="bindTime" value="{{timeIndex}}" range="{{timeArray}}">
				<text style="color:#a1a1a1">
					{{timeArray[timeIndex]}} 〉
				</text>
			</picker>
		</view>
		<view class="item line dialogWidth">
			<text>性别限制：</text>
			<!-- <text>不限性别 〉</text> -->
			<picker bindchange="bindGender" value="{{genderIndex}}" range="{{genderArray}}">
				<text style="color:#a1a1a1">
					{{genderArray[genderIndex]}} 〉
				</text>
			</picker>
		</view>
	</view>
	<view class="bottom_tip">
		<text>信息仅接单的同学可见!</text>
		<text>需支付</text>
		<text>8元</text>
	</view>
	<button type="submit" class="submit">立即发布</button>
	<view class="statement">
		<text>免责声明</text>
		<text>用户条款&隐私策略</text>
	</view>
</view>
