page{
	background-color: #fff;
}

.body{
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.body .body_item{
	display: flex;
	justify-content: space-between;
	width: 90%;
	align-items: center;
	padding: 30rpx 0;
	border-bottom: 2rpx solid #d1d1d1 ;
}

.body .body_item .left{
	display: flex;
	align-items: center;
}

.body .body_item .left image{
	width: 45rpx;
	height: 45rpx;
	margin-right: 12rpx;
}

.body .body_item .right{
	color: #a1a1a1;
}

.body .body_item .right input{
	text-align: right;
	color: #a1a1a1;
	-webkit-text-fill-color: #a1a1a1;
	margin-right: 20rpx;
}

.body .default{
	width: 90%;
	display: flex;
	justify-content: flex-end;
	align-items: center;
	padding: 20rpx 0;
}

.body .default text{
	color: #a1a1a1;
	margin-right: 30rpx;

}

.body .save{
	width: 80%;
	background-color: #1296db;
	color: #fff;
	padding: 20rpx 0;
	margin-top: 60rpx;
	border-radius: 40rpx;
	font-weight: 400;
}

.body .tip{
	margin-top: 30rpx;
	color: #1296db;
	font-size: 28rpx;
}